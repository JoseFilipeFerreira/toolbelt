#!/bin/bash
# pick from a [list](powertools/dmenu/nitro) of emojis and gifs

file=~/.config/dmenu/nitro
mkdir -p "$(dirname "$file")"
touch "$file"

pick="$(awk 'NF{NF-=1};1' "$file" | sort | dmenu -i -l 20 -p "pick emoji:")"

[[ "$pick" ]] || exit

link="$(grep -E "^$pick" "$file" | awk '{print $(NF)}')"

echo "$link" | xclip -sel clip

notify-send -a "nitro" -i "apps/discord" "$pick" "to clipboard"

