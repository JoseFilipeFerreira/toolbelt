[global]
    ### Display ###

    follow = keyboard

    width=(100,300)
    height=250
    offset=7x30

    progress_bar_height = 6
    progress_bar_frame_width = 0
    progress_bar_corner_radius = 3
    # highlight = "#FFFFFF"

    transparency = 10

    padding = 10
    horizontal_padding = 10

    frame_width = 0
    frame_color = "#000000"

    separator_height = 1
    separator_color = "auto"

    idle_threshold = 60

    corner_radius = 5

    ### Text ###

    font = DejaVuSansMono Nerd Font 8

    markup = full
    format = "<b>%s</b>\n%b\n<i>%a</i>"

    alignment = left

    show_age_threshold = 30

    ellipsize = end

    ### Icons ###

    icon_position = left
    min_icon_size = 32
    max_icon_size = 48

    enable_recursive_icon_lookup = true
    icon_theme = toolicons

    ### Misc/Advanced ###

    dmenu = /usr/local/bin/dmenu -l 20 -p "links in notification:"
    browser = /usr/bin/xdg-open

    always_run_script = true

    ### Mouse ###

    mouse_left_click = do_action
    mouse_middle_click = close_current
    mouse_right_click = context


[discord]
    desktop_entry = "discord"
    urgency = low

