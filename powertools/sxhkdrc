# PROGRAMS

super + {F1,F2,F3}
        {discord,$BROWSER,$BROWSER $(calendar --curr-link)}

super + Home
        meross-cli --toggle

super + {_,shift +} d
        {dmenu_IQ,menu}

{_,control +, alt +} @Print
        cuffs {--select --clipboard, --clipboard, --select --floating}

super + {_,shift +,control +} Return
        {$TERMINAL,termFromHere,termFromCal}

super + w
        wall

super + control + l
        lock

control + alt + Tab
        notify-send lel lol

# XF86 KEYS

XF86MonBrightness{Up,Down}
        blind {+,-}

XF86Audio{Raise,Lower}Volume
        deaf {+,-}

XF86Audio{_,Mic}Mute
        deaf {mute, mic}

XF86Audio{Play,Stop,Prev,Next}
        udm {--play-pause,--stop,--previous, --next}

XF86Search
        dmenu_IQ

XF86{Tools,WWW,Mail}
        launch_and_move {1 kodi,3 $BROWSER,4 discord}

XF86HomePage
        meross-cli --toggle

## no XF86 keys

super + {Up, Down}
        deaf {+,-}

super + {Prior,Next,Left,Right}
        udm {--play-pause,--stop,--previous, --next}


## control kiwi remotely

super + control + {Up, Down}
        ssh kiwi .local/bin/deaf {+,-}

super + control + {Prior,Next,Left,Right}
        ssh kiwi .local/bin/udm {--play-pause,--stop,--previous, --next}


# WM KEYBINDS

## MISC

super + shift + {q,r,e}
        i3-msg {kill,restart,exit}

## FOCUS

super + {1-9, 0, Tab}
        i3-msg workspace {1-9,10,back_and_forth}

super + {h,j,k,l}
        i3-msg focus {left,down,up,right}

## CONTAINER

super + shift + {1-9,0}
        i3-msg move container to workspace {1-9,10}

super + shift + {h,j,k,l}
        i3-msg move {left,down,up,right}

super + alt + {h,j,k,l}
       i3-msg resize {shrink width,grow height,shrink height,grow width} 10 px or 10 ppt

## CHANGE LAYOUT

super + space
        i3-msg 'floating toggle'

super + shift + space
        i3-msg 'floating toggle; sticky toggle'

super + v
        i3-msg split toggle

super + f
        i3-msg fullscreen toggle

super + e
        i3-msg layout toggle tabbed splith
