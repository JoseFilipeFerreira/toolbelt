# PROGRAMS

super + {F1,F2}
        {discord,$BROWSER}

super + Home
        meross-cli --toggle

super + {_,shift +} d
        {dmenu_IQ,menu}

{_,control +, alt +, super +} @Print
        cuffs {--select --clipboard, --clipboard, --select --floating, }

super + {_, shift +} Return
        {$TERMINAL,termFromHere}

super + {w, c}
        {wall --rng, calendar}

control + alt + v
        clipmenu

super + control + l
        slock

# XF86 KEYS

XF86MonBrightness{Up,Down}
        blind backlight {+,-}

XF86KbdBrightness{Up,Down}
        blind keyboard {+,-}

## control media

XF86Audio{_,Mic}Mute
        deaf {mute, mic}

XF86Audio{Raise,Lower}Volume
        deaf {+,-}

XF86Audio{Play,Stop,Prev,Next}
        udm {--play-pause,--stop,--previous, --next}

super + {Prior,Next,Left,Right,Up,Down}
        udm {--play-pause,--stop,--previous,--next,--volume-up,--volume-down}

## control media on kiwi remotely

control + XF86Audio{Raise,Lower}Volume
        ssh kiwi .local/bin/deaf {+,-}

super + control + {Prior,Next,Left,Right,Up,Down}
        ssh kiwi .local/bin/udm {--play-pause,--stop,--previous,--next,--volume-up,--volume-down}

## kiwi specific

XF86Search
        dmenu_IQ

XF86{WWW,Mail}
        launch-and-move {3 $BROWSER,4 discord}

XF86HomePage
        meross-cli --toggle

# DUNST KEYBINDS

control + {_, shift +} space
        dunstctl {close,close-all}

control + {_, shift +} period
        dunstctl {action 0, context}

control + grave
        dunstctl history-pop

# WM KEYBINDS

## MISC

super + shift + {q,r,e}
        i3-msg {kill,restart,exit}

## FOCUS

super + {1-9, 0, Tab}
        i3-msg workspace {1-9,10,back_and_forth}

super + {h,j,k,l}
        i3-msg focus {left,down,up,right}

## CONTAINER

super + shift + {1-9,0}
        i3-msg move container to workspace {1-9,10}

super + shift + {h,j,k,l}
        i3-msg move {left,down,up,right}

super + alt + {h,j,k,l}
       i3-msg resize {shrink width,grow height,shrink height,grow width} 10 px or 10 ppt

## CHANGE LAYOUT

super + space
        i3-msg 'floating toggle'

super + shift + space
        i3-msg 'floating toggle; sticky toggle'

super + v
        i3-msg split toggle

super + f
        i3-msg fullscreen toggle

super + e
        i3-msg layout toggle tabbed splith
